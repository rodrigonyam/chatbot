# Vitamins Chatbot - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vitamins_chatbot

# AI Service Configuration (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key_here

# External APIs
VITAMIN_PRODUCT_API_URL=https://api.yourstore.com/products
PAYMENT_GATEWAY_URL=https://api.yourpayment.com

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here